{
    "name": "danbettles/codesniffer-standard",
    "description": "A PHP_CodeSniffer standard that mainly looks for abandoned debugging code",
    "keywords": ["PHP_CodeSniffer","CodeSniffer","debugging"],
    "license": "ISC",
    "authors": [
        {
            "name": "Daniel Bettles",
            "email": "daniel@justathought.dev"
        }
    ],
    "autoload": {
        "psr-4": {"DanBettles\\PhpCodeSnifferStandard\\": "src/"}
    },
    "autoload-dev": {
        "files": ["vendor/squizlabs/php_codesniffer/tests/bootstrap.php"],
        "psr-4": {"DanBettles\\PhpCodeSnifferStandard\\Tests\\": "tests/src/"}
    },
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5.4",
        "squizlabs/php_codesniffer": "^4.0.1"
    },
    "scripts": {
        "app:test": "phpunit --bootstrap=tests/bootstrap.php --colors=always tests/",
        "app:analyse": "phpstan analyse --level=max -v --ansi src/ tests/",
        "app:lint": "phpcs",
        "app:check-quality": [
            "@app:test",
            "@app:analyse",
            "@app:lint"
        ]
    }
}
